{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "max-classes-per-file": false,
    "no-console": false,
    "no-string-literal": false,
    "no-trailing-whitespace": false,
    "no-unreachable": true,
    "no-empty": false,
    "no-shadowed-variable": false,
    "no-namespace": false,
    "only-arrow-functions": false,
    "comment-format": false,
    "semicolon": [
      true,
      "always"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore",
      "allow-snake-case",
      "allow-trailing-underscore"
    ]
  },
  "rulesDirectory": [],
  "exclude": [
    "build/**/*",
    "node_modules/**/*",
    "tmp/**/*"
  ]
}
